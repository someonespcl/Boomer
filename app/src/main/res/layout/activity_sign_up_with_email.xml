<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:animateLayoutChanges="true"
    android:padding="24dp"
    tools:context=".activities.SignUpWithEmailActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_semibold"
        android:text="Back" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="64dp"
        android:text="Whats Your Email?"
        android:id="@+id/email_hint" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        app:layout_constraintStart_toStartOf="parent"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/email_hint"
        android:text="Enter the email address you would like to use sign in to boomer."
        android:id="@+id/email_sub_hint" />
    
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/email_sub_hint"
        android:background="@drawable/edit_text_background"
        android:hint="Username"
        android:minHeight="50dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="12dp"
        android:inputType="textPersonName"
        android:id="@+id/username_input" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/username_input"
        android:background="@drawable/edit_text_background"
        android:hint="@string/email_hint"
        android:minHeight="50dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="12dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email_input" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        android:background="@drawable/edit_text_background"
        android:hint="@string/password_hint"
        android:minHeight="50dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="12dp"
        android:inputType="textPassword"
        android:id="@+id/password_input"
        android:drawableEnd="@drawable/eye_off"
        android:drawablePadding="12dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="20dp"
        android:fontFamily="@font/just_sans_exbold"
        app:minHeight="50dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/password_input"
        android:id="@+id/create_ac_with_email"
        android:text="Create Account" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/mauline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/create_ac_with_email"
        android:text="Already Have An Account ?" />

</androidx.constraintlayout.widget.ConstraintLayout>
